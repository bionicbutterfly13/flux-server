# Flux Server Configuration
# Copy this file to .env and update values for your environment

# ============================================================================
# SERVICE CONFIGURATION
# ============================================================================
APP_NAME=Flux Server
HOST=0.0.0.0
PORT=9127
DEBUG=False

# ============================================================================
# NEO4J DATABASE (Knowledge Graph)
# ============================================================================
# Install Neo4j: brew install neo4j
# Start Neo4j: brew services start neo4j
# Access browser: http://localhost:7474
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_password_here
NEO4J_DATABASE=neo4j

# ============================================================================
# REDIS (Caching & Real-time Data)
# ============================================================================
# Install Redis: brew install redis
# Start Redis: brew services start redis
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# ============================================================================
# OLLAMA / LLM (Response Synthesis)
# ============================================================================
# Install Ollama: brew install ollama
# Pull model: ollama pull llama2
# Start Ollama: ollama serve
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama2

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
# Add your frontend URLs (comma-separated)
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]
CORS_CREDENTIALS=True
CORS_METHODS=["*"]
CORS_HEADERS=["*"]

# ============================================================================
# CONSCIOUSNESS PROCESSING SETTINGS
# ============================================================================
CONSCIOUSNESS_DETECTION_THRESHOLD=0.3
VECTOR_DIMENSIONS=384
THOUGHTSEED_LAYERS=5

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
